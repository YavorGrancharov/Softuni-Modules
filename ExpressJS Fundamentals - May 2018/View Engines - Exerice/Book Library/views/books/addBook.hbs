<div class="error">
    {{error}}
</div>

<form method="POST">
    <div>
        Title:
        <input type="text" name="title" value="{{title}}"/>
    </div>
    <br>
    <div>
        Author:
        <input type="text" name="author" value="{{author}}"/>
    </div>
    <br>
    <div>
        Release Date:
        <input type="date" name="releaseDate" value="{{releaseDate}}"/>
    </div>
    <br>
    <div>
        Image URL:
        <input type="url" name="imageURL" value="{{imageURL}}"/>
    </div>
    <br>
    <input type="submit" />
</form>