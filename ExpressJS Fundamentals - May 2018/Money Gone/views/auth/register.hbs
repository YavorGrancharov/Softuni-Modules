{{> header}}

<main>
    <form action="/auth/register" method="POST">
        <h1>Register</h1>

        <p>Personal info</p>
        <label for="username">Username</label>
        <input id="username" name="username" type="text" placeholder="JustMyself123...">

        <label for="password">Password</label>
        <input id="password" name="password" type="password" placeholder="******" required>

        <label for="repeat-password">Repeat Password</label>
        <input id="repeat-password" name="repeat-password" type="password" placeholder="******" required>
        <hr>
        <p>Account</p>
        <label for="amount">Amount</label>
        <input id="amount" name="amount" type="text" placeholder="$125.90">

        <button type="submit">Register</button>
    </form>
</main>

{{> footer}}