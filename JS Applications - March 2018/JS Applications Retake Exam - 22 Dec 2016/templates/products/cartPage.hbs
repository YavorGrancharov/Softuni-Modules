{{> header}}

<main>
    <section id="viewCart">
        <h1>My Cart</h1>
        <div class="products" id="cartProducts">
            <table>
                {{#if empty}}
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                {{else}}
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each products}}
                        {{> cart}}
                    {{/each}}
                    </tbody>
                {{/if}}
            </table>
        </div>
    </section>
</main>

{{> footer}}