{{> header}}

<main>
    <section id="viewShop">
        <h1>Products</h1>
        <div class="products" id="shopProducts">
            <table>
                {{#if empty}}
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                {{else}}
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each products}}
                        {{> product}}
                    {{/each}}
                    </tbody>
                {{/if}}
            </table>
        </div>
    </section>
</main>

{{> footer}}