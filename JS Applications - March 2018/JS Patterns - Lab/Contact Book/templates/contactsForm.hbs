<section id="contacts">
    <div class="container">
        {{> header}}

        <div id="contact" class="box-large">
            <div id="list">
                {{> contactsList}}
            </div>
            <div id="details">
                {{#if selected}}
                    {{> detailsForm}}
                {{else}}
                    <h1>Details</h1>
                    <div class="content">
                        You didn't selected a contact!
                    </div>
                {{/if}}
            </div>
        </div>

        {{> footer}}
    </div>
</section>